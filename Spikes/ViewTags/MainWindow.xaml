<Window x:Class="ViewTags.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewTags="clr-namespace:ViewTags"
        Title="MainWindow" Height="350" Width="525" AllowDrop="True" Drop="MainWindow_OnDrop">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Command="{Binding OpenCommand}">Open</Button>
            </ToolBar>
            <DataGrid x:Name="dataGrid" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" IsReadOnly="True"
                      viewTags:DataGridBehaviors.BindableColumns="{Binding Columns}"
                      AutoGenerateColumns="False">
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
